<h1>Listing locations</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Class</th>
      <th>Type</th>
      <th>Parent</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

 
  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.location_code %></td>
        <td><%= location.location_name %></td>
        <td><%= location.location_class.try(:location_class_name) %></td>
        <td><%= location.location_type.try(:location_type_name) %></td>
        <td><%= location.location_code.parent.nil ? " " : location.location_code.parent.location_class_name %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

