<%= simple_form_for(@location_class) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :location_class_code %>
    <%= f.input :location_class_name %>
    <%= f.input :physical_location,  as: :boolean, checked_value: true, unchecked_value: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
