<%= simple_form_for @item do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :item_class, label_method: :item_class_name, value_method: :id %> 
    <%= f.association :item_type, label_method: :item_type_name, value_method: :id %>     
    <%= f.input :item_name %>  
    <%= f.input :has_individuals %>
    <%= f.input :barcode %>
    <%= f.input :value %>
    <%= f.input :weight %>
    <%= f.input :lifespan_in_days, label: "Lifespan" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
